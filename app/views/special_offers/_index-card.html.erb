  <% @specialoffers.each do |offer| %>
  <%= link_to special_offer_path(offer) do  %>
    <div class="offer-card-container " id="<%= offer.id %>">
      <div class=" d-flex m-0 p-0">
        <div class="default_offer-card-wrapper">
          <%= image_tag offer.restaurant.url, class: "default_offer-card rounded" %>
          <%# if offer.restaurant.url %>
          <%# else %>
          <%#= image_tag "default_offer.png", alt: "text", class: "default_offer-card" %>
          <%# end %>
        </div>
        <div class="right-pane mx-2 text-primary">
          <div class="d-flex m-0 offerdetailstitle justify-content-between align-middle">
            <i class="fa-solid fa-tags"></i>
            <h4 class="offer-title mb-2"><%= offer.category %></h4>
            <i class="fa-solid fa-tags"></i>
          </div>
          <div class="d-flex m-0">
            <p class="offerdetails"><span class="offerdetails"><i class="fa-solid fa-utensils"></i></span></p>
            <p class="m-0 mx-2 text-black-50"> <%= offer.restaurant.name %></p>
          </div>
          <div class="d-flex m-0">
            <p class="offerdetails"><i class="fa-solid fa-circle-info"></i></p>
            <p class="my-0 mx-2 text-black-50"><%= offer.restaurant.category %></p>
          </div>
          <div class="d-flex justify-content-between">
            <div class="d-flex m-0">
              <p class="offerdetails"><i class="fa-solid fa-clock"></i></p>
              <p class="my-0 mx-2 flex-grow-1 text-black-50">
                <%= offer.end_date.strftime('%b %d, %Y') %>
              </p>
            </div>
            <div class="d-flex m-0">
              <p class="offerdetails"><i class="fa-solid fa-check"></i></p>
              <p class="my-0 mx-2 text-black-50"><%= offer.confirmation_count %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
