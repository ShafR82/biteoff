  <% @specialoffers.each do |offer| %>
  <%= link_to special_offer_path(offer) do  %>
    <div class="offer-card-container " id="<%= offer.id %>">
      <div class=" d-flex justify-content-between">
        <div class="default_offer-card-wrapper">
          <%= image_tag offer.restaurant.url, class: "default_offer-card" %>
          <%# if offer.restaurant.url %>
          <%# else %>
          <%#= image_tag "default_offer.png", alt: "text", class: "default_offer-card" %>
          <%# end %>
        </div>
        <div class="right-pane">
          <h5 class="offer-title mb-2"><%= offer.category %></h5>
          <div class="d-flex m-0">
            <p class="offerdetails"><i class="fa-solid fa-utensils"></i><span class="offerdetails-label"></span></p>
            <p class="my-0 mx-2"><%= offer.restaurant.name %></p>
          </div>
          <div class="d-flex m-0">
            <p class="offerdetails"><i class=" fa-solid fa-circle-info"></i><span class="offerdetails-label"></span></p>
            <p class="my-0 mx-2"><%= offer.restaurant.category %></p>
          </div>
          <div class="d-flex justify-content-between">
            <div class="d-flex m-0">
              <p class="offerdetails"><i class="fa-solid fa-clock"></i></p>
              <p class="my-0 mx-2 flex-grow-1">
                <%= offer.end_date.strftime('%b %d, %Y') %>
              </p>
            </div>
            <div class="d-flex m-0">
              <p class="offerdetails"><i class=" fa-solid fa-check"></i></p>
              <p class="my-0 mx-2"><%= offer.confirmation_count %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
