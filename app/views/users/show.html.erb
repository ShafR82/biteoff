<div class="container">
  <div class="mt-3 d-flex flex-row justify-content-evenly bg-light pt-2 rounded shadow-sm">
    <div class="py-4">
      <h3>Hello <%= @user.username %>!</h3>
    </div>
    <div class="py-1">
      <%= image_tag "avatar.png", alt: "avatar image", class: "avatar-large" %>
    </div>
  </div>
  <div class="text-center mt-4">
    <% if user_signed_in? %>
      <div class="btn btn-info">
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete } %>
      </div>
    <% end %>
  </div>
</div>
