<div class="container">
  <h1>Review</h1>
  <div class="container">
    <div class="row">
      <div class="col-xs-4">
        <%= simple_form_for [@special_offer, @review] do |f| %>
          <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
          <%= f.input :description %>
          <%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
          <%= f.submit "Send your review", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
